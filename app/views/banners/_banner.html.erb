<%= turbo_frame_tag :banner do %>
  <figure class="mb-8">
    <div role="img" alt="<%= container.banner.metadata[:ts_alt] %>" class="w-full h-[25vw] min-h-[33vh] max-h-[50vh] relative bg-center bg-cover" style="background-image: url('<%= story_asset_url(container.banner) %>');">
      <% if editable %>
        <% if flash[:created] %>
          <%= render 'banners/edit_form', container: container %>
        <% else %>
          <%= render 'banners/edit_button', container: container %>
        <% end %>
      <% end %>
    </div>
    <% if container.banner.metadata[:ts_credits] %>
      <figcaption class="w-full text-xs text-gray-400 pr-4 text-right markdown"><%=md container.banner.metadata[:ts_credits] %></figcaption>
    <% end %>
  </figure>
<% end %>
