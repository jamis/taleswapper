<li class="mt-2 max-w-prose">
  <p><%= link_to bookmark.name, chapter_path(bookmark.chapter, anchor: 'bookmark_' + bookmark.anchor), class: 'ts-link', data: { action: 'dialog#close' } %></p>
  <% if bookmark.description.present? %>
    <p class="text-nowrap text-ellipsis overflow-hidden w-full text-sm italic text-gray-400"><%= bookmark.description %></p>
  <% end %>
</li>
