<% content_for :subheader do %>
  <div class="bg-white text-sm border-b">
    <div class="mx-2 flex flex-row">
      <div class="flex-initial px-2 py-1">
        <%= link_to "Scratch Pad", chapter_scratch_pad_path(@chapter), data: { turbo_stream: true }, class: "ts-link" %>
      </div>
      <div class="flex-initial px-2 py-1">
        <%= link_to "Track Sheet", chapter_track_sheet_path(@chapter), data: { turbo_stream: true }, class: "ts-link" %>
      </div>
    </div>
  </div>
<% end %>

<div class="container mx-auto mt-24 flex-col w-full">
  <h1 class="text-2xl font-bold">Edit Chapter</h1>

  <%= render 'form', chapter: @chapter %>
</div>
