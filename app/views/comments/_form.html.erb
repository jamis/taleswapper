<div class="mb-4 border rounded-sm border-blue-400 overflow-hidden">
  <div class="bg-blue-50 border-b border-blue-400 px-4 py-2">
    Say something!
  </div>
  <div class="markdown px-4 py-2">
    <%= form_with model: [ commentable, commentable.comments.build ] do |form| %>
      <%= form.text_area :contents, class: "w-full h-32 rounded-lg" %>
      <%= form.submit class: "border border-blue-700 rounded-lg bg-blue-50 px-4 py-2 mt-1 cursor-pointer hover:bg-blue-100" %>
    <% end %>
  </div>
</div>
