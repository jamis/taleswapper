<li>
  <div class="flex flex-col md:flex-row md:gap-2 mb-2 md:mb-0 items-baseline">
    <%= link_to chapter.title.presence || "Untitled", chapter_path(chapter), class: "ts-link" %>
    <div class="text-sm">
      <% if chapter.published? %>
        <span class="text-gray-400"><%= chapter.published_at.strftime("%A, %B %e, %Y") %></span>
      <% else %>
        <span class="text-red-600">[draft]</span>
      <% end %>
    </div>
  </div>
</li>
