<div class="flex flex-col w-full">
  <div class="p-2"><span class="font-bold"><%= card_deck.name %></span>:</div>
  <div class="flex flex-row flex-wrap indent-0">
    <% (local_assigns[:value] || [ default_card_from(card_deck) ]).each do |card| %>
      <div class="flex flex-col border border-blue-900 rounded-lg shadow-md w-72 min-h-72 overflow-hidden">
        <% card_deck.definition.each do |element| %>
          <%= render_tracker_template_element(element, readonly: true) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
